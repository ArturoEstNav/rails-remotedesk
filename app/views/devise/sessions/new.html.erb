<div class="container custom-container-page">
  <div class="custom-container-section">
    <h2>Log in</h2>

    <div class="custom-container-section">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, input_html: {class: "custom-element-transparent"} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, input_html: {class: "custom-element-transparent"} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-success"  %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
