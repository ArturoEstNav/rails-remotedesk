  <%if @offers and not @offers.empty? %>
    <div class="custom-container-section">
      <h2><%= "#{@params.capitalize} job offers" %></h2>
      <% @offers.each do |offer| %>
        <div class="card custom-card custom-offer-result">
          <div>
            <h3 class="card-title"><%= offer.title %></h3>
            <h5 class="card-text"><%= offer.company.capitalize %></h5>
            <% offer.tags.each do |tag| %>
              <%= link_to tag.name.capitalize, "/?q=#{URI.encode_www_form_component(tag.name)}&commit=Search", class: "card-button btn btn-secondary custom-btn-secondary" %>
            <% end %>
          </div>
          <div class="offer-buttons d-flex align-items-end justify-content-end">
              <div class="d-flex">
                <%= link_to "Check job", offer_path(offer), class: "card-button btn btn-warning" %>
              <% if user_signed_in? %>
                <%= simple_form_for @match do |f| %>
                  <%= f.input :offer_id, as: :hidden, input_html: { value: offer.id } %>
                  <!-- <%= f.button :submit, "Save Job", disabled: offer.users.include?(current_user), class: "btn btn-info custom-btn-info" %> -->
                       <button class="btn btn-link btn-xs" type="submit">
                        <i class="far fa-heart"></i>
                        </button>
                <% end %>
              <% else %>
                <%= link_to ('<i class="far fa-heart"></i>').html_safe, new_user_session_path, class: "btn btn-info custom-btn-info" %>
              <% end %>
              </div>
          </div>
        </div>
      <br>
      <% end %>
    </div>
  <%end%>

  <div class="custom-container-section">
    <h2>Recently added jobs</h2>
    <div class="custom-offers-container">
      <% @new_offers.each do |offer| %>
        <div class="card custom-card">
          <div class="card-body  d-flex flex-column justify-content-between">
            <div>
              <h5 class="card-title"><%= offer.title %></h5>
              <p> <%= offer.company %></p>
            </div>
            <div>
              <p class="card-text">
                <% offer.tags.first(5).each do |tag|%>
                  <span class="btn btn-secondary custom-btn-secondary">
                  <%= link_to "#{tag.name.capitalize}", "/?q=#{URI.encode_www_form_component(tag.name)}&commit=Search" %>
                   </span>
                <% end %>
              </p>
              <%= link_to 'View full offer', offer_path(offer.id), class: "btn btn-warning" %>
            </div>

          </div>
        </div>

      <% end %>
